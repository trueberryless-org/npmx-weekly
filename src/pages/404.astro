---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404: Not Found | npmx.weekly">
  <div class="error-container">
    <section class="intro">
      <span class="error-code">404</span>
      <h1>Page not found</h1>
      <p>
        The update you're looking for doesn't exist or has been moved. The npmx
        ecosystem is fast, but this link couldn't keep up.
      </p>
    </section>

    <div class="actions">
      <a href="/" class="back-home"> ‚Üê Back to the latest updates </a>
    </div>
  </div>
</Layout>

<style>
  .error-container {
    padding: 4rem 0;
    min-height: 40vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .intro {
    margin-bottom: 2.5rem;
  }

  .error-code {
    display: block;
    font-family: monospace;
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
    letter-spacing: 0.1em;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--accent);
    letter-spacing: -0.02em;
  }

  p {
    color: var(--text-muted);
    line-height: 1.6;
    max-width: 450px;
  }

  .actions {
    margin-top: 1rem;
  }

  .back-home {
    display: inline-block;
    color: var(--text);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    transition:
      transform 0.2s ease,
      color 0.2s ease;
  }

  .back-home:hover {
    color: var(--accent);
    transform: translateX(-4px);
  }

  @media (max-width: 500px) {
    .error-container {
      padding: 2rem 0;
    }

    h1 {
      font-size: 1.5rem;
    }
  }
</style>
