---
import { getCollection, getEntries } from "astro:content";
import Layout from "../layouts/Layout.astro";

const allPosts = await getCollection("posts");
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);

const MAX_DISPLAY_POSTS = 5;
const latestPosts = sortedPosts.slice(0, MAX_DISPLAY_POSTS);
const hasArchive = sortedPosts.length > MAX_DISPLAY_POSTS;

const postsWithAuthors = await Promise.all(
  latestPosts.map(async (post) => {
    const authors = post.data.authors
      ? await getEntries(post.data.authors)
      : [];
    return { ...post, authors };
  }),
);
---

<Layout title="npmx.weekly">
  <section class="intro">
    <h1>npmx Weekly</h1>
    <p>Get regular updates for the npmx ecosystem.</p>
  </section>

  <div class="post-list">
    {
      postsWithAuthors.map(({ data, id, authors }) => {
        const postDate = new Date(data.date);
        const displayDate = postDate.toLocaleDateString("en-US", {
          month: "short",
          day: "numeric",
        });

        return (
          <a href={`/posts/${id}`} class="post-entry">
            <div class="post-meta">
              <time datetime={data.date.toString()}>{displayDate}</time>
              <div class="authors-pile">
                {authors.map((author) => (
                  <img
                    src={author.data.picture}
                    alt={author.data.name}
                    title={author.data.name}
                    class="pile-pfp"
                  />
                ))}
              </div>
            </div>
            <div class="post-content">
              <h2>{data.title}</h2>
              {data.description && (
                <p class="description">{data.description}</p>
              )}
            </div>
          </a>
        );
      })
    }
  </div>

  {
    hasArchive && (
      <a href="/archive" class="archive-link">
        Explore the archives â†’
      </a>
    )
  }
</Layout>

<style>
  .intro {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--accent);
  }

  .intro p {
    color: var(--text-muted);
    line-height: 1.5;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  .post-entry {
    text-decoration: none;
    color: inherit;
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: 1.5rem;
    transition: transform 0.2s;
  }

  .post-entry:hover {
    transform: translateX(4px);
  }

  .post-meta {
    font-size: 0.85rem;
    color: var(--text-muted);
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    font-family: monospace;
  }

  .authors-pile {
    display: flex;
    align-items: center;
  }

  .pile-pfp {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 2px solid var(--bg);
    margin-left: -10px;
    background: var(--border);
    object-fit: cover;
  }

  .pile-pfp:first-child {
    margin-left: 0;
  }

  h2 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.4rem;
    color: var(--text);
    line-height: 1.3;
  }

  .description {
    font-size: 0.95rem;
    color: var(--text-muted);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .archive-link {
    display: block;
    margin-top: 5rem;
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .archive-link:hover {
    color: var(--accent);
  }

  @media (max-width: 500px) {
    .post-entry {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }
    .post-meta {
      flex-direction: row;
      align-items: center;
      gap: 1.5rem;
    }
  }
</style>
