---
import { getCollection, getEntries } from "astro:content";
import Layout from "../layouts/Layout.astro";

const allPosts = await getCollection("posts");
const sortedPosts = allPosts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);

const MAX_DISPLAY_POSTS = 5;
const latestPosts = sortedPosts.slice(0, MAX_DISPLAY_POSTS);
const hasArchive = sortedPosts.length > MAX_DISPLAY_POSTS;

const postsWithAuthors = await Promise.all(
  latestPosts.map(async (post) => {
    const authors = post.data.authors
      ? await getEntries(post.data.authors)
      : [];
    return { ...post, authors };
  }),
);
---

<Layout title="npmx.weekly">
  <section class="hero-bleed">
    <div class="hero-inner">
      <h1>Stay in the loop</h1>
      <p>
        The latest updates from the npmx ecosystem, delivered directly to your
        inbox every Sunday.
      </p>

      <form id="subscribe-form" class="subscribe-form">
        <input
          type="email"
          name="email"
          placeholder="email@example.com"
          required
          class="sub-input"
        />
        <button type="submit" class="sub-button">Subscribe</button>
      </form>
      <p id="form-msg" class="form-msg"></p>
    </div>
  </section>

  <div class="post-list">
    <h3 class="section-label">Latest Issues</h3>
    {
      postsWithAuthors.map(({ data, id, authors }) => {
        const postDate = new Date(data.date);
        const displayDate = postDate.toLocaleDateString("en-US", {
          month: "short",
          day: "numeric",
        });

        return (
          <a href={`/posts/${id}`} class="post-entry">
            <div class="post-meta">
              <time datetime={data.date.toString()}>{displayDate}</time>
              <div class="authors-pile">
                {authors.map((author) => (
                  <img
                    src={author.data.picture}
                    alt={author.data.name}
                    title={author.data.name}
                    class="pile-pfp"
                  />
                ))}
              </div>
            </div>
            <div class="post-content">
              <h2>{data.title}</h2>
              {data.description && (
                <p class="description">{data.description}</p>
              )}
            </div>
          </a>
        );
      })
    }
  </div>

  {
    hasArchive && (
      <a href="/archive" class="archive-link">
        Explore the archives â†’
      </a>
    )
  }
</Layout>

<script>
  const form = document.getElementById("subscribe-form") as HTMLFormElement;
  const msg = document.getElementById("form-msg");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();
    const btn = form.querySelector("button") as HTMLButtonElement;
    btn.disabled = true;
    const formData = new FormData(form);
    const email = formData.get("email");

    if (msg) {
      msg.textContent = "Processing...";
      msg.className = "form-msg";
    }

    try {
      const res = await fetch("/api/subscribe", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ email }),
      });

      const result = await res.json();

      if (msg) {
        msg.textContent = result.message;
        msg.className = `form-msg ${res.ok ? "success" : "error"}`;
      }

      if (res.ok) form.reset();
    } catch (err) {
      if (msg) {
        msg.textContent = "Something went wrong. Please try again.";
        msg.className = "form-msg error";
      }
    } finally {
      btn.disabled = false;
    }
  });
</script>

